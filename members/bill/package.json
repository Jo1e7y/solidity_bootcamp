{
  "name": "hardhat_app_template",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "hh": "npx hardhat",
    "compile": "npx hardhat compile",
    "build": "hardhat typechain && forge build",
    "test": "forge test",
    "testh": "hardhat test",
    "testc": "hardhat coverage",
    "clean": "npx hardhat clean",
    "lhnode": "npx hardhat node",
    "console": "npx hardhat console",
    "verify": "npx hardhat verify --network sepolia <address> <unlock time>",
    "verify2": "npx hardhat verify --network mainnet DEPLOYED_CONTRACT_ADDRESS \"Constructor argument 1\"",
    "verifyargs": "npx hardhat verify --constructor-args arguments.js DEPLOYED_CONTRACT_ADDRESS ",
    "deploy:hh": "npx hardhat run --network hardhat scripts/deploy.ts",
    "deploy:localhost": "npx hardhat run --network localhost scripts/deploy.ts",
    "deploy:scrollTestnet": "npx hardhat run --network scrollTestnet scripts/deploy.ts"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-foundry": "^1.1.1",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.9",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=16.0.0",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.1",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-preprocessor": "^0.1.5",
    "solidity-coverage": "^0.8.5",
    "ts-node": ">=8.0.0",
    "typechain": "^8.3.2",
    "typescript": ">=4.5.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "solmate": "^6.2.0"
  }
}
